{
  "rules": {
    "accounts": {
      "$uid": {
        ".write": "$uid === auth.uid",
        ".read": "auth !== null",
        ".validate": "newData.hasChildren(['address', 'contact', 'email', 'gender', 'image'])"
      }
    },
    "tasks": {
      ".read": "auth !== null",
      "$uid": {
        ".write": "data.child('employer').val() === auth.uid || newData.child('employer').val() === auth.uid",
        ".read": "auth !== null",
        ".validate": "newData.hasChildren(['currency', 'date', 'details', 'employer', 'location', 'open', 'price', 'skills', 'tags', 'title', 'ups'])"
      }
    },
    "applications": {
      ".read": "auth !== null",
      "$uid": {
        ".write": "newData.child('employee').val() === auth.uid || newData.child('employer').val() === auth.uid || data.child('employee').val() === auth.uid || data.child('employer').val() === auth.uid",
        ".validate": "newData.hasChildren(['task', 'employee', 'message', 'date', 'accepted', 'employer'])"
      }
    }
  }
}
